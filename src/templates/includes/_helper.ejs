<%
helper = {
    today: () => {
        return (new Date()).toLocaleDateString('ja-JP');
    },
    asset: (
            /** @type {string} */ path
    ) => {
        return meta.path.relative.asset + '/' + path;
    },
    css: (
            /** @type {string} */ path
    ) => {
        return meta.path.relative.css + '/' + path;
    },
    js: (
            /** @type {string} */ path
    ) => {
        return meta.path.relative.js + '/' + path;
    }
}
%>
